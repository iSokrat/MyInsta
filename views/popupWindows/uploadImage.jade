//- together with /bootstrap/js/modal.js
#uploadImageWindow.modal.fade(tabindex='-1', role='dialog', aria-labelledby='uploadImageLabel')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
                h4#uploadLabel.modal-title Загрузка изображения
            .modal-body
                form(action="/profile/upload",method="POST",enctype="multipart/form-data")
                    input.btn.btn-default.btn-lg.btn-block(type="file",
                    name="image",
                    placeholder="Загрузить изображение...")
                    input.btn.btn-default.btn-success.btn-block(type="submit",value="Загрузить изображение")
            .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Close
script(type="text/javascript",src="/javascripts/showUploadImageWindow.js")

