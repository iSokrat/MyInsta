doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
    link(href='/opensans-light/fonts.css', type='text/css', rel='stylesheet')
    link(rel="stylesheet",type="text/css", href="/css/fonts/opensans-regular/fonts.css")
    title Registration
  body
    .container
      .row
        .col-lg-4.col-md-4.col-sm-4.col-lg-offset-4.col-md-offset-4.col-sm-offset-4
          h1.text-center  Зарегистрироваться 
          .well
            img.img-circle.center-block(width='100', height='100', src='/images/default/avatar.png', alt='User')
            form(action='/register', method='POST')
              .form-group
                input.form-control(type='text', name='name', placeholder='Name')
              .form-group
                input.form-control(type='text', name='surname', placeholder='Surname')
              .form-group
                input.form-control(type='text', name='username', placeholder='Login')
              .form-group
                input.form-control(type='password', name='password', placeholder='Password')
              input.btn.btn-lg.btn-primary.btn-block(type='submit',value="Зарегистрироваться")
              br
              h4=info