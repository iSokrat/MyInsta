doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
    link(href='/opensans-light/fonts.css', type='text/css', rel='stylesheet')
    link(rel="stylesheet",type="text/css", href="/css/fonts/opensans-regular/fonts.css")
    title Login
  body
    .container
      .row
        .col-md-4.col-md-offset-4
          h1.text-center  Войти 
          .well
            img.img-circle.center-block(width='100', height='100', src='/images/default/avatar.png', alt='User')
            form(role="form", action="/login", method="post")
              .form-group
                input.form-control(type='text', name='username', placeholder='Логин')
              .form-group
                input.form-control(type='password', name='password', placeholder='Пароль')
              input.btn.btn-lg.btn-primary.btn-block(type='submit',value="Войти")
              br
              if (Message.length > 0)
                .alert.alert-danger
                  p= Message